<!DOCTYPE html>
<html>

<head>
    <title>Profile</title>
    <link rel="stylesheet" href="/css/profile.css">

    <script src="https://kit.fontawesome.com/b7c0e417e7.js" crossorigin="anonymous"></script>

</head>

<header>
    <%- include('partials/_navbar') %>
</header>

<body>
    <div class="backpic row">
        <img src="/images/charts.jpg" alt="background" class="backgroundpic">
    </div>
    <div class="container">

        <div class="card left-card">
            <div class="profile-pic-container">
                <img src="https://picsum.photos/200/300" alt="Profile Picture" class="profile-pic" />
                <div class="camera-icon">
                    <i class="fas fa-camera"></i>
                </div>
            </div>

            <div class="oldinfo names">
                <% if(isSignedIn){ %>
                    <h3>
                        <%= name %>
                    </h3>
                    <% }else{ %>
                        <h3>Not SignedIn</h3>
                        <% } %>
            </div>

            <br>
            <div class="oldinfo email">
                <% if(isSignedIn){ %>
                    <p>
                        <%= email %>
                    </p>
                    <% }else{ %>
                        <p>Not SignedIn</p>
                        <% } %>
            </div>

            <div id="icons">
                <div class="row">
                    <div class="col-lg-6  div1">
                        <i class="fab fa-linkedin leftcardicons"></i>
                    </div>

                    <div class="col-lg-6 div1">
                        <i class="fa-brands fa-instagram leftcardicons"></i>
                    </div>

                    <div class="col-lg-6 div1">
                        <i class="fa-solid fa-plus leftcardicons"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="card right-card">

            <div class="part1">
                <div class="col-md-6 field field1">
                    <label for="firstname">First Name:</label>
                    <input type="text" id="firstname" value="" />
                </div>

                <div class="col-md-6 field field1 field2">
                    <label for="lastname">Last Name:</label>
                    <input type="text" id="lastname" value="" />
                </div>
            </div>

            <div class="part2">
                <div class="field educationfield">
                    <label for="education">Education:</label>
                    <select id="education" name="education">
                        <option value="">--Please select an option--</option>
                        <option value="BCOM">BCOM</option>
                        <option value="Btech">Btech</option>
                        <option value="Mtech">Mtech</option>
                        <option value="PG">PG</option>
                        <option value="Other">Other</option>
                    </select>
                </div>

                <div id="optional-field" style="display: none;">
                    <div class="field">
                        <label for="other-education">Other:</label>
                        <input type="text" id="other-education" name="other-education" />
                    </div>
                </div>



                <div class="field phonefield">
                    <label for="phone">Phone:</label>
                    <div class="phone-dropdown">
                        <select name="country-code">
                            <option value="">select code</option>
                            <option value="+1">+1 (USA)</option>
                            <option value="+44">+44 (UK)</option>
                            <option value="+81">+81 (Japan)</option>
                            <option value="+91">+91 (India)</option>
                            <!-- Add more options for other countries -->
                        </select>
                        <input type="text" id="phone" placeholder="123-456-7890" />
                    </div>
                </div>


                <div class="field emailfield">
                    <label for="email">Email:</label>
                    <input type="text" id="email" value="" />
                </div>

                <div class="field incomefield">
                    <label for="income">Income:</label>
                    <div class="input-group">
                        <input type="text" id="income" class="form-control" placeholder="Amount" />
                        <div class="input-group-append">
                            <select id="currency" class="form-control">
                                <option value="">select currency</option>
                                <option value="USD">USD</option>
                                <option value="EUR">EUR</option>
                                <option value="INR">INR</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="upload-field">
                    <label for="file-upload">Upload a file:</label>
                    <input type="file" id="file-upload" />
                </div>

                <button class="save-button">Save Changes</button>
            </div>


        </div>
    </div>
    <script src="/js/profile.js"></script>
</body>

<footer>
    <%- include('partials/_footer') %>
</footer>

</html>